<h1><%= @cocktail.name %></h1>
<% @cocktail.doses.each do |dose| %>
<li>
  <%= dose.ingredient.name %>
  <%= dose.description %>
  <%= link_to 'delete', dose_path(dose), method: :delete%>

</li>
<% end %>

<button> <%= link_to "Add new dose", new_cocktail_dose_path(@cocktail) %></button>

<button> <%= link_to "Back to cocktail list", cocktails_path %></button>
